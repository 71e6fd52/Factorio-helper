#!/bin/zsh -e
cp -rfub $fac/config/ $conf
cp $fac/mods/mod-settings.json $conf
cp -rfub $fac/save/ $conf
cd $conf
read "message?Type message?[Y/n]"
if [[ "$message" =~ ^(([Yy]|[Yy]es)|)$ ]]
then
	read "message?Message: "
else
	message=`date --iso-8601`
fi
git add .
git commit -m "$message"
git push origin
